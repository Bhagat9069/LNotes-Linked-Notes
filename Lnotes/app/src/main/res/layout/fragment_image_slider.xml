<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/slider_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingRight="@dimen/item_offset"
        android:background="@color/toolbar_backgroound_color"
        >



        <ImageButton
            android:id="@+id/save_Item"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/white"
            android:background="@drawable/item_bg_menu"
            android:contentDescription="Save Image"
            />
            <ImageButton
                android:id="@+id/modify_item"
                android:layout_width="?attr/actionBarSize"
                android:layout_toLeftOf="@+id/save_Item"
                android:background="@drawable/item_bg_menu"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:tint="@color/white"
                android:src="@drawable/ic_edit_black_24dp"
                android:contentDescription="Modify Image"
                />
        <ImageButton
            android:id="@+id/OCR_Item"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/modify_item"
            android:layout_gravity="right"
            android:src="@drawable/ic_ocr_24dp"
            android:tint="@color/white"
            android:background="@drawable/item_bg_menu"
            android:contentDescription="Find Text"
            />


        <ImageButton
            android:id="@+id/addMarker_item"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/item_bg_menu"
            android:layout_toRightOf="@+id/modify_item"
            android:layout_gravity="right"
            android:src="@drawable/ic_tag_white"
            android:tint="@color/white"
            android:contentDescription="Add Marker"
            />



    </android.support.v7.widget.Toolbar>


</RelativeLayout>